<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
      <Button
          	android:id="@+id/movies_button"
            android:text="@string/movies"
            android:layout_marginRight="5sp"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:textSize="12sp"
            android:textColor="#FFF"
            android:paddingLeft="10sp"
            android:layout_weight="1"
            android:background="@drawable/button_rounded_corners_red"
            android:drawablePadding="10sp"
            android:gravity="center_vertical"
            />

      <Button
          	android:id="@+id/games_button"
            android:text="@string/games"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:paddingLeft="10sp"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:textSize="12sp"
            android:textColor="#FFF"
            android:layout_weight="1"
            android:background="@drawable/button_rounded_corners_green2"
            android:drawablePadding="10sp"
            android:gravity="center_vertical"
            />
</LinearLayout>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
      <Button
            android:id="@+id/soft_button"
            android:text="@string/soft"
            android:layout_marginRight="5sp"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:paddingLeft="10sp"
			android:paddingRight="-25sp"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:textSize="12sp"
            android:textColor="#FFF"
            android:layout_weight="1"
            android:background="@drawable/button_rounded_corners_dblue"
            android:drawablePadding="10sp"
            android:gravity="center_vertical"
            />

      <Button
            android:id="@+id/series_button"
            android:text="@string/series"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:paddingLeft="10sp"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:textSize="12sp"
            android:textColor="#FFF"
            android:layout_weight="1"
            android:background="@drawable/button_rounded_corners_blue"
            android:drawablePadding="10sp"
            android:gravity="center_vertical"
            />
</LinearLayout>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
      <Button
            android:id="@+id/songs_button"
            android:text="@string/songs"
            android:layout_marginRight="5sp"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:paddingLeft="10sp"
			android:paddingRight="10sp"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:textSize="12sp"
            android:textColor="#FFF"
            android:layout_weight="1"
            android:background="@drawable/button_rounded_corners_orange"
            android:drawablePadding="10sp"
            android:gravity="center_vertical"
            />

      <Button
            android:id="@+id/books_button"
            android:text="@string/others"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:paddingLeft="10sp"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:textSize="12sp"
            android:textColor="#FFF"
            android:layout_weight="1"
            android:background="@drawable/button_rounded_corners_dblue"
            android:drawablePadding="10sp"
            android:gravity="center_vertical"
            />
</LinearLayout>    

	<com.google.android.gms.ads.AdView
 		android:id="@+id/adViewBottom"
 		android:layout_width="fill_parent"
 		android:layout_height="wrap_content" 
 		android:layout_marginTop="5sp"		
 		ads:adSize="280x50"
 		ads:adUnitId="@string/banner_ad_unit_id"
		/>

<TextView
    android:id="@+id/topic"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/latest"
    android:paddingLeft="20sp"
    android:paddingRight="10sp"
    android:paddingTop="15sp"
    android:textStyle="bold"
    android:textSize="15sp"
    
    />

<TextView
    android:id="@+id/belowTopic"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/fromall"
    android:textColor="#7D7A7A"
    android:paddingLeft="20sp"
    android:paddingRight="10sp"
    android:paddingTop="-3sp"
    android:textSize="12sp"
    />

<ListView
        android:id="@+id/listMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:divider="@null"
		android:dividerHeight="0dp" 
      	/>

</LinearLayout><!-- From: file:/root/StudioProjects/GeekShare/app/src/main/res/layout/activity_main.xml -->